<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="8dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_black_24dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_below="@id/Name"
                    android:layout_alignBottom="@id/Name_des"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp"
                    />
                <TextView
                    android:id="@+id/Name_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Name"
                    android:layout_toRightOf="@id/house"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="12dp"
                    android:text="LNM VILLA" />

                <TextView
                    android:id="@+id/Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imageView"
                    android:paddingTop="10dp"
                    android:text="Address"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_local_shipping_black_24dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_below="@id/Add"
                    android:layout_alignBottom="@id/Add_des"
                    android:paddingTop="10dp"
                    android:paddingRight="4dp"
                    />

                <TextView
                    android:id="@+id/Add_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Add"
                    android:layout_toRightOf="@id/Add_img"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="10dp"
                    android:text="434-A Lajpat nagar,Scheme No-2,Alwar" />

                <TextView
                    android:id="@+id/Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/Name"
                    android:text="Starting Price"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rupee"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_alignBottom="@id/Price_des"
                    android:layout_toLeftOf="@id/Price_des"
                    android:id="@+id/imageView" />
                <TextView
                    android:id="@+id/Price_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Price"
                    android:layout_toLeftOf="@id/Price"
                    android:layout_alignParentRight="true"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:text="12000000" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="8dp"
            card_view:cardCornerRadius="@dimen/card_album_radius"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
                <TextView
                    android:id="@+id/Amenties"
                    android:layout_width="wrap_content"
                    android:text="Amneties"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gym"
                    android:layout_below="@id/Amenties"
                    android:paddingTop="10dp"
                    android:text="Gym"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/swimmingpool"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/gym"
                    android:layout_below="@id/Amenties"
                    android:layout_alignBottom="@id/gym"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Swimming Pool"/>
                <TextView
                    android:id="@+id/garden"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/swimmingpool"
                    android:layout_below="@id/Amenties"
                    android:layout_alignBottom="@id/gym"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"

                    android:fontFamily="sans-serif-condensed"
                    android:text="Garden"/>
                <TextView
                    android:id="@+id/lift"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/garden"
                    android:layout_below="@id/Amenties"
                    android:layout_alignBottom="@id/gym"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"

                    android:fontFamily="sans-serif-condensed"
                    android:text="Lift"/>
                <TextView
                    android:id="@+id/Cafeteria"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/lift"
                    android:layout_below="@id/Amenties"
                    android:layout_alignBottom="@id/gym"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"

                    android:fontFamily="sans-serif-condensed"
                    android:text="Cafeteria"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>